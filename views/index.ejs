<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Budget</title>
    <!-- Bootstrap links -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
      integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk"
      crossorigin="anonymous"
    />
    <script
      src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
      integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
      integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
      integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI"
      crossorigin="anonymous"
    ></script>
    <!-- jQuery link -->
    <script
      src="https://code.jquery.com/jquery-3.5.1.min.js"
      integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
      crossorigin="anonymous"></script>
    <!-- Google fonts link -->
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@300;400;500;700&display=swap"
      rel="stylesheet"
    />
    <!-- CSS link -->
    <link rel="stylesheet" href="css/homeStyles.css" />
  </head>
  <body>
    <nav class="navbar navbar-dark bg-dark">
      <a class="navbar-brand" href="#">Budget</a>
      <div class="navbar-nav">
        <a href="/" class="nav-item nav-link">Receivables</a>
      </div>
    </nav>
    <div class="container-fluid">
    <div class="row">
      <div class="col-2">
        <h1 class="payables">Payables</h1>
      </div>
      <% for(let i=0; i<5; i++) { %>
        <div class="col-2">
            <h3 class="dateValues"><%= monthName + " " + dateArray[i] %></h3>
        </div>
      <% } %>
      <div class="w-100"></div>
      <% for(let i=0;i<vendorList.length;i++) { %>
        <div class="col-2 vendorInfo">
          <h6><%= vendorList[i].name %></h6>
          <form action="/editVendor" method="post" class="editForm">
            <button class="btn btn-sm btn-outline-dark editingButton" type="submit" name="editItem" value= <%= vendorList[i]._id %> > Edit</button>
          </form>
          <p><%= vendorList[i].tag %></p>
        </div>
        <% for(let j=0;j<5; j++) { %>
            <div class="col-2">
              <form action="/budget" method="post">
                <input type="number" name="newValue" onchange="this.form.submit()" value=<%= amounts[j]%> class="amountInput">
                <input type="hidden" name="valueIndex" value= <%= j %>></input>
                <input type="hidden" name="vendorName" value= "<%= vendorList[i].name %>"></input>
                <input type="hidden" name="vendorTag" value= "<%= vendorList[i].tag %>"></input>
              </form>
            </div>
        <% } %>
      <% } %>
      <div class="col-2">
        <form action="/newVendorEntry" method="post" class="newVendorForm">
          <button type="submit" class="plusButton btn btn-sm" name="add">+</button>
        </form>
      </div>
    </div>
    </div>
    <script src="index.js" type="text/javascript"></script>
  </body>
</html>
